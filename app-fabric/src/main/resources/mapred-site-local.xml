<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <value>local</value>
  </property>
  <property>
    <name>mapreduce.jobtracker.address</name>
    <value>clocal</value>
    <description>
      See LocalClientProtocolProvider for more info
    </description>
  </property>
  <property>
    <name>mapreduce.job.counters.counter.name.max</name>
    <value>256</value>
  </property>
  <property>
    <name>mapreduce.local.map.tasks.maximum</name>
    <value>8</value>
    <description>The maximum number of map tasks to run in parallel in LocalJobRunner</description>
  </property>
  <property>
    <name>mapreduce.local.reduce.tasks.maximum</name>
    <value>8</value>
    <description>The maximum number of reduce tasks to run in parallel in LocalJobRunner</description>
  </property>
</configuration>