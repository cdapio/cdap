<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} - %-5p [%thread] [%t:%C{1}@%L] - %m%n</pattern>
        </encoder>
    </appender>

    <logger name="co.cask.cdap.notifications" level="DEBUG" />
    <logger name="org.apache.twill" level="DEBUG" />

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
