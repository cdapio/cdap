{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    "quotemark": [
      false
    ],
    "ordered-imports": false,
    "interface-name": [
      true,
      "always-prefix"
    ],
    "no-var-requires": false,
    "object-literal-sort-keys": false,
    "member-ordering": false,
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always",
        "semi": true,
        "printWidth": 100
      }
    ]
  },
  "jsRules": {
    "arrow-parens": false,
    "object-literal-key-quotes": false,
    "member-ordering": false,
    "semicolon": false,
    "ordered-imports": false,
    "quotemark": false,
    "object-literal-sort-keys": false,
    "trailing-comma": false,
    "whitespace": false,
    "one-variable-per-declaration": false,
    "max-line-length": false,
    "no-string-literal": false,
    "no-consecutive-blank-lines": false,
    "no-console": false,
    "space-before-function-paren": false,
    "no-shadowed-variable": false,
    "triple-equals": false,
    "import-spacing": false,
    "no-empty": false,
    "align": false,
    "variable-name": false,
    "jsdoc-format": false,
    "one-line": false,
    "no-unused-expression": false,
    "no-string-throw": false,
    "no-trailing-whitespace": false,
    "no-bitwise": false,
    "radix": false,
    "forin": false
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules",
      "bower_components",
      "dist",
      "cdap_dist",
      "login_dist",
      "common_dist"
    ]
  }
}
