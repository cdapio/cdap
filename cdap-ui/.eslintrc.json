{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "strict": 0,
    "no-unused-vars": [
      2,
      {
        "vars": "local"
      }
    ],
    "semi": 2,
    "semi-spacing": [
      1,
      {
        "before": false,
        "after": true
      }
    ],
    "no-console": 0,
    "no-dupe-args": 1,
    "no-dupe-keys": 1,
    "no-trailing-spaces": 1,
    "keyword-spacing": 1,
    "space-before-blocks": 1,
    "spaced-comment": 1,
    "curly": 1,
    "eol-last": 1,
    "generator-star-spacing": 1,
    "babel/new-cap": 0,
    "array-bracket-spacing": 1,
    "babel/object-curly-spacing": 0,
    "babel/object-shorthand": 0,
    "babel/arrow-parens": 0,
    "no-await-in-loop": 1,
    "react/no-deprecated": 0,
    "react/jsx-key": 0,
    "no-useless-escape": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "arrowParens": "always",
        "semi": true,
        "printWidth": 100
      }
    ]
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "angular": false,
    "PKG": true,
    "getAbsUIUrl": true,
    "_": true,
    "describe": true,
    "jasmine": true,
    "it": true,
    "expect": true,
    "jest": true,
    "beforeEach": true,
    "afterEach": true,
    "avsc": true
  },
  "plugins": [
    "react",
    "babel",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ], 
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
