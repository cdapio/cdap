#!/usr/bin/env bash

bin=`dirname "${BASH_SOURCE-$0}"`
bin=`cd "$bin"; pwd`
script=`basename $0`

source $bin/../../common.sh

jar="$bin/../PurchaseApp.jar"
app=PurchaseApp

start() {
  curl -s -X POST http://$gateway/v2/apps/PurchaseHistory/flows/PurchaseFlow/start 2>/dev/null
  curl -s -X POST http://$gateway/v2/apps/PurchaseHistory/procedures/PurchaseQuery/start 2>/dev/null
}

stop() {
  curl -s -X POST http://$gateway/v2/apps/PurchaseHistory/flows/PurchaseFlow/stop 2>/dev/null
  curl -s -X POST http://$gateway/v2/apps/PurchaseHistory/procedures/PurchaseQuery/stop 2>/dev/null
}

$action
