<?xml version="1.0" ?>
<project name="examples" default="jar">
    <property environment="env"/>
    <property name="appfabric.home" value="${env.APP_FABRIC_HOME}"/>

    <!-- if APP_FABRIC_HOME is set, use it to find the libraries; otherwise use ../.. -->
    <condition property="appfabric.lib" value="../.." else="${appfabric.home}">
        <matches string="${appfabric.home}" pattern="..env.APP_FABRIC_HOME."/>
    </condition>
    <!-- echo message="Expecting AppFabric API libraries in ${appfabric.lib}"/ -->

    <property name="example.name" value="${ant.project.name}"/>
    <property name="main.class" value="${example.package}.${example.name}"/>
    <property name="jar.name" value="${example.name}.jar" />
    <property name="build.dir" value="classes"/>
    <property name="source.dir" value="src"/>
    <property name="manifest.file" value="${build.dir}/META-INF/MANIFEST.MF"/>

    <path id="appfabric.classpath">
        <fileset dir="${appfabric.lib}">
            <include name="*.jar" />
        </fileset>

        <!-- Pick up any libs that an example has included -->
        <fileset dir="./lib" erroronmissingdir="false">
            <include name="*.jar" />
        </fileset>

        <fileset dir="./lib-to-package" erroronmissingdir="false">
            <include name="*.jar" />
        </fileset>

    </path>

    <target name="init">
        <mkdir dir="${build.dir}" />
    </target>

    <target name="compile" depends="init">
        <javac srcdir="${source.dir}" destdir="${build.dir}"
               classpathref="appfabric.classpath"  includeantruntime="false" />
    </target>

    <!-- Creates a MANIFEST.MF class automatically -->
    <target name="manifest" depends="init">
        <mkdir dir="${build.dir}/META-INF"/>
        <manifest file="${manifest.file}">
            <attribute name="Main-Class" value="${main.class}" />
        </manifest>
    </target>

    <target name="jar" depends="compile, manifest">
        <jar destfile="${jar.name}" basedir="classes" manifest="${manifest.file}" duplicate="preserve">
            <zipgroupfileset dir="./lib-to-package" includes="*.jar" erroronmissingdir="false"/>
        </jar>
    </target>

    <target name="clean">
        <delete dir="${build.dir}" />
        <delete file="${jar.name}" />
    </target>
</project>
