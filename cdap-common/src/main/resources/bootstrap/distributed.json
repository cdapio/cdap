{
  "steps": [
    {
      "label": "Create native profile",
      "type": "CREATE_NATIVE_PROFILE",
      "runCondition": "ONCE"
    },
    {
      "label": "Create default namespace",
      "type": "CREATE_DEFAULT_NAMESPACE",
      "runCondition": "ONCE"
    },
    {
      "label": "Load system artifacts",
      "type": "LOAD_SYSTEM_ARTIFACTS",
      "runCondition": "ALWAYS"
    },
    {
      "label": "Create pipeline application",
      "type": "CREATE_APPLICATION",
      "runCondition": "ONCE",
      "arguments": {
        "namespace": "system",
        "name": "pipeline",
        "artifact": {
          "name": "cdap-data-pipeline",
          "version": "[6.0.1-SNAPSHOT, 10.0.0)",
          "scope": "SYSTEM"
        },
        "config": {
          "service": true
        }
      }
    },
    {
      "label": "Start pipeline service",
      "type": "START_PROGRAM",
      "runCondition": "ONCE",
      "arguments": {
        "namespace": "system",
        "application": "pipeline",
        "type": "service",
        "name": "studio"
      }
    }
  ]
}
